<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Policy - Virtual Police Station</title>
    <!-- Include required libraries -->
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 min-h-screen">
    <!-- Header Section -->
    <header class="py-8 px-4">
        <div class="max-w-7xl mx-auto text-center">
            <div class="animate__animated animate__fadeIn">
                <div class="inline-block p-2 bg-white rounded-2xl shadow-xl mb-6">
                    <div class="w-24 h-24 bg-gradient-to-tr from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center transform rotate-3 hover:rotate-6 transition-transform duration-300">
                        <i class="fas fa-shield-alt text-4xl text-white"></i>
                    </div>
                </div>
                <h1 class="text-5xl font-bold text-gray-800 mb-4 tracking-tight">Privacy Policy</h1>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                    Your privacy and security are our top priorities. Learn how we protect your information.
                </p>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="pb-16 px-4">
        <div class="max-w-7xl mx-auto">
            <!-- Navigation Tabs -->
            <div class="bg-white rounded-2xl shadow-lg mb-8 p-2 animate__animated animate__fadeInUp animate__delay-1s">
                <nav class="flex flex-wrap justify-center gap-2" role="tablist" id="privacy-tabs">
                    <button class="tab-btn active px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 flex items-center space-x-2 bg-gradient-to-r from-blue-500 to-indigo-600 text-white" data-tab="collection">
                        <i class="fas fa-database"></i>
                        <span>Data Collection</span>
                    </button>
                    <button class="tab-btn px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 flex items-center space-x-2 text-gray-600 hover:bg-gray-50" data-tab="usage">
                        <i class="fas fa-tasks"></i>
                        <span>Data Usage</span>
                    </button>
                    <button class="tab-btn px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 flex items-center space-x-2 text-gray-600 hover:bg-gray-50" data-tab="security">
                        <i class="fas fa-lock"></i>
                        <span>Security</span>
                    </button>
                    <button class="tab-btn px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 flex items-center space-x-2 text-gray-600 hover:bg-gray-50" data-tab="sharing">
                        <i class="fas fa-share-alt"></i>
                        <span>Information Sharing</span>
                    </button>
                    <button class="tab-btn px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 flex items-center space-x-2 text-gray-600 hover:bg-gray-50" data-tab="rights">
                        <i class="fas fa-user-shield"></i>
                        <span>Your Rights</span>
                    </button>
                </nav>
            </div>

            <!-- Tab Content -->
            <div class="tab-content-container">
                <!-- Data Collection Section -->
                <section id="collection" class="tab-content active">
                    <div class="bg-white rounded-2xl shadow-lg p-8 animate__animated animate__fadeIn">
                        <div class="max-w-3xl mx-auto">
                            <div class="flex items-center mb-8">
                                <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mr-6 transform -rotate-3">
                                    <i class="fas fa-database text-2xl text-blue-600"></i>
                                </div>
                                <div>
                                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Data Collection</h2>
                                    <p class="text-gray-600">Information we collect to provide our services</p>
                                </div>
                            </div>
                            
                            <div class="space-y-6">
                                <div class="p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-user-circle text-blue-600 mr-3"></i>
                                        Personal Information
                                    </h3>
                                    <ul class="space-y-3 text-gray-600">
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>Full name and contact details</span>
                                        </li>
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>Government-issued identification numbers</span>
                                        </li>
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>Address and location information</span>
                                        </li>
                                    </ul>
                                </div>

                                <div class="p-6 bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-file-alt text-purple-600 mr-3"></i>
                                        Case Information
                                    </h3>
                                    <ul class="space-y-3 text-gray-600">
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>FIR details and case information</span>
                                        </li>
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>Supporting documents and evidence</span>
                                        </li>
                                        <li class="flex items-start">
                                            <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                                            <span>Communication records</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Data Usage Section -->
                <section id="usage" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-lg p-8 animate__animated animate__fadeIn">
                        <div class="max-w-3xl mx-auto">
                            <div class="flex items-center mb-8">
                                <div class="w-16 h-16 bg-indigo-100 rounded-2xl flex items-center justify-center mr-6 transform -rotate-3">
                                    <i class="fas fa-tasks text-2xl text-indigo-600"></i>
                                </div>
                                <div>
                                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Data Usage</h2>
                                    <p class="text-gray-600">How we use your information</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="p-6 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-cog text-indigo-600 mr-3"></i>
                                        Service Provision
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        We use your information to process and manage your FIR complaints, schedule appointments, and provide essential police services.
                                    </p>
                                </div>

                                <div class="p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-comments text-blue-600 mr-3"></i>
                                        Communication
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        To keep you informed about your case status, upcoming appointments, and important updates regarding your interactions with us.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Security Section -->
                <section id="security" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-lg p-8 animate__animated animate__fadeIn">
                        <div class="max-w-3xl mx-auto">
                            <div class="flex items-center mb-8">
                                <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mr-6 transform -rotate-3">
                                    <i class="fas fa-shield-alt text-2xl text-green-600"></i>
                                </div>
                                <div>
                                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Security Measures</h2>
                                    <p class="text-gray-600">How we protect your data</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-lock text-green-600 mr-3"></i>
                                        Data Encryption
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        All sensitive information is encrypted using industry-standard protocols to ensure maximum security.
                                    </p>
                                </div>

                                <div class="p-6 bg-gradient-to-br from-emerald-50 to-green-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-user-lock text-emerald-600 mr-3"></i>
                                        Access Control
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        Strict access controls and authentication measures to prevent unauthorized access to your information.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Information Sharing Section -->
                <section id="sharing" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-lg p-8 animate__animated animate__fadeIn">
                        <div class="max-w-3xl mx-auto">
                            <div class="flex items-center mb-8">
                                <div class="w-16 h-16 bg-yellow-100 rounded-2xl flex items-center justify-center mr-6 transform -rotate-3">
                                    <i class="fas fa-share-alt text-2xl text-yellow-600"></i>
                                </div>
                                <div>
                                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Information Sharing</h2>
                                    <p class="text-gray-600">When and how we share your information</p>
                                </div>
                            </div>

                            <div class="space-y-6">
                                <div class="p-6 bg-gradient-to-br from-yellow-50 to-amber-50 rounded-xl">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4">Legal Requirements</h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        We may share information with law enforcement agencies and government authorities as required by law or to comply with legal obligations.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Your Rights Section -->
                <section id="rights" class="tab-content hidden">
                    <div class="bg-white rounded-2xl shadow-lg p-8 animate__animated animate__fadeIn">
                        <div class="max-w-3xl mx-auto">
                            <div class="flex items-center mb-8">
                                <div class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mr-6 transform -rotate-3">
                                    <i class="fas fa-user-shield text-2xl text-purple-600"></i>
                                </div>
                                <div>
                                    <h2 class="text-3xl font-bold text-gray-800 mb-2">Your Rights</h2>
                                    <p class="text-gray-600">Understanding your data rights</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div class="p-6 bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-eye text-purple-600 mr-3"></i>
                                        Access Rights
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        You have the right to access your personal information and request details about how it's being used.
                                    </p>
                                </div>

                                <div class="p-6 bg-gradient-to-br from-pink-50 to-purple-50 rounded-xl transform hover:-translate-y-1 transition-transform duration-300">
                                    <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                                        <i class="fas fa-edit text-pink-600 mr-3"></i>
                                        Correction Rights
                                    </h3>
                                    <p class="text-gray-600 leading-relaxed">
                                        You can request corrections to your personal information if it's inaccurate or incomplete.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-white shadow-lg mt-8">
        <div class="max-w-7xl mx-auto py-6 px-4 text-center">
            <p class="text-gray-600">
                Last Updated: <span class="font-medium text-gray-800">
                    <%= new Date().toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
                </span>
            </p>
        </div>
    </footer>

    <style>
    .tab-btn {
        position: relative;
        overflow: hidden;
    }

    .tab-btn::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: currentColor;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .tab-btn:hover::after {
        width: 100%;
    }

    .tab-btn.active {
        background: linear-gradient(to right, #3B82F6, #6366F1);
        color: white;
    }

    .tab-content {
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .tab-content.active {
        display: block;
        opacity: 1;
    }

    @media (max-width: 768px) {
        .tab-btn {
            width: 100%;
        }
    }
    </style>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('.tab-btn');
        const contents = document.querySelectorAll('.tab-content');

        function showContent(contentId) {
            contents.forEach(content => {
                if (content.id === contentId) {
                    content.style.display = 'block';
                    content.classList.remove('hidden');
                    content.classList.add('active');
                    setTimeout(() => {
                        content.style.opacity = '1';
                    }, 10);
                } else {
                    content.style.opacity = '0';
                    content.classList.add('hidden');
                    content.classList.remove('active');
                    content.style.display = 'none';
                }
            });
        }

        function switchTab(tab) {
            // Remove active class from all tabs
            tabs.forEach(t => t.classList.remove('active'));
            
            // Add active class to clicked tab
            tab.classList.add('active');
            
            // Show corresponding content
            const contentId = tab.getAttribute('data-tab');
            showContent(contentId);
        }

        // Add click handlers to all tabs
        tabs.forEach(tab => {
            tab.addEventListener('click', () => switchTab(tab));
        });

        // Initialize the first tab as active
        if (tabs.length > 0) {
            switchTab(tabs[0]);
        }

        // Add keyboard navigation
        tabs.forEach(tab => {
            tab.setAttribute('role', 'tab');
            tab.setAttribute('tabindex', '0');
            tab.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    switchTab(tab);
                }
            });
        });
    });
    </script>
</body>
</html> 