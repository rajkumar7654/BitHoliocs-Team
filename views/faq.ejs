<!-- Feedback Section with Enhanced Styling -->
<div class="bg-gradient-to-b from-gray-50 to-white py-16">
    <div class="max-w-4xl mx-auto px-4">
        <div class="bg-white rounded-2xl shadow-xl p-8">
            <div class="text-center mb-8">
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Still have questions?</h2>
                <p class="text-gray-600">Can't find what you're looking for? Please tell us how we can help.</p>
            </div>

            <form id="feedbackForm" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="relative">
                        <input type="text" id="name" name="name" required
                            class="peer w-full px-4 py-3 rounded-lg border border-gray-300 placeholder-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <label for="name" 
                            class="absolute left-4 -top-2.5 bg-white px-1 text-sm text-gray-600 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-600">
                            Your Name
                        </label>
                    </div>
                    <div class="relative">
                        <input type="email" id="email" name="email" required
                            class="peer w-full px-4 py-3 rounded-lg border border-gray-300 placeholder-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <label for="email"
                            class="absolute left-4 -top-2.5 bg-white px-1 text-sm text-gray-600 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-600">
                            Email Address
                        </label>
                    </div>
                </div>

                <div class="relative">
                    <input type="text" id="subject" name="subject" required
                        class="peer w-full px-4 py-3 rounded-lg border border-gray-300 placeholder-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <label for="subject"
                        class="absolute left-4 -top-2.5 bg-white px-1 text-sm text-gray-600 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-600">
                        Subject
                    </label>
                </div>

                <div class="relative">
                    <textarea id="message" name="message" rows="4" required
                        class="peer w-full px-4 py-3 rounded-lg border border-gray-300 placeholder-transparent focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"></textarea>
                    <label for="message"
                        class="absolute left-4 -top-2.5 bg-white px-1 text-sm text-gray-600 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-400 peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-600">
                        Your Message
                    </label>
                </div>

                <div class="flex justify-center">
                    <button type="submit"
                        class="inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transform hover:scale-105 transition-all duration-300">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                        </svg>
                        Send Message
                    </button>
                </div>
            </form>

            <div id="alertMessage" class="mt-6 hidden rounded-lg p-4 text-center"></div>
        </div>
    </div>
</div>

<script>
// FAQ Accordion functionality
document.querySelectorAll('.faq-item button').forEach(button => {
    button.addEventListener('click', () => {
        const answer = button.nextElementSibling;
        const icon = button.querySelector('svg');
        
        // Toggle answer visibility
        answer.classList.toggle('hidden');
        
        // Rotate icon
        icon.style.transform = answer.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
    });
});

// Search functionality
document.getElementById('faq-search').addEventListener('input', (e) => {
    const searchTerm = e.target.value.toLowerCase();
    document.querySelectorAll('.faq-item').forEach(item => {
        const question = item.querySelector('h3').textContent.toLowerCase();
        const answer = item.querySelector('.faq-answer').textContent.toLowerCase();
        
        if (question.includes(searchTerm) || answer.includes(searchTerm)) {
            item.style.display = 'block';
        } else {
            item.style.display = 'none';
        }
    });
});

// Form submission handling
document.getElementById('feedbackForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const alertDiv = document.getElementById('alertMessage');
    const form = e.target;
    const submitButton = form.querySelector('button[type="submit"]');
    
    // Validate form
    const formData = {
        name: form.name.value.trim(),
        email: form.email.value.trim(),
        subject: form.subject.value.trim(),
        message: form.message.value.trim()
    };

    // Check if any field is empty
    if (!formData.name || !formData.email || !formData.subject || !formData.message) {
        alertDiv.className = 'mt-6 bg-red-100 text-red-700 rounded-lg p-4 text-center';
        alertDiv.textContent = 'Please fill in all fields';
        alertDiv.classList.remove('hidden');
        return;
    }

    // Validate email format
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(formData.email)) {
        alertDiv.className = 'mt-6 bg-red-100 text-red-700 rounded-lg p-4 text-center';
        alertDiv.textContent = 'Please enter a valid email address';
        alertDiv.classList.remove('hidden');
        return;
    }
    
    // Disable submit button and show loading state
    submitButton.disabled = true;
    submitButton.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Sending...';
    
    try {
        const response = await fetch('/questions/submit', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
        });
        
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const data = await response.json();
        
        if (data.success) {
            alertDiv.className = 'mt-6 bg-green-100 text-green-700 rounded-lg p-4 text-center';
            alertDiv.textContent = data.message;
            form.reset();
        } else {
            throw new Error(data.message || 'Failed to submit question');
        }
    } catch (error) {
        console.error('Error:', error);
        alertDiv.className = 'mt-6 bg-red-100 text-red-700 rounded-lg p-4 text-center';
        alertDiv.textContent = error.message || 'An error occurred. Please try again.';
    } finally {
        // Reset button state
        submitButton.disabled = false;
        submitButton.innerHTML = '<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>Send Message';
        
        // Show alert
        alertDiv.classList.remove('hidden');
        
        // Hide alert after 5 seconds
        setTimeout(() => {
            alertDiv.classList.add('hidden');
        }, 5000);
    }
});
</script>

