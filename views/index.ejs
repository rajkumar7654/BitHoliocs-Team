<!-- Hero Section -->
<section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-16">
    <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-merriweather font-bold mb-6">
                Virtual Police Station
            </h1>
            <p class="text-xl mb-8">
                File and track FIRs online securely from anywhere
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                <% if (locals.user) { %>
                    <a href="/fir/new" class="bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-3 px-8 rounded-lg transition duration-300">
                        File New FIR
                    </a>
                    <a href="/fir/track" class="bg-white hover:bg-gray-100 text-blue-900 font-bold py-3 px-8 rounded-lg transition duration-300">
                        Track FIR Status
                    </a>
                <% } else { %>
                    <a href="/auth/register" class="bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-3 px-8 rounded-lg transition duration-300">
                        Register Now
                    </a>
                    <a href="/auth/login" class="bg-white hover:bg-gray-100 text-blue-900 font-bold py-3 px-8 rounded-lg transition duration-300">
                        Login
                    </a>
                <% } %>
            </div>
            <% if (!locals.user) { %>
                <p class="mt-6 text-gray-300">Please login or register to file and track FIRs</p>
            <% } %>
        </div>
    </div>
</section>

<!-- Features Section -->
