<%- include('partials/header') %>

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="max-w-lg w-full text-center px-4">
        <div class="mb-8">
            <h1 class="text-6xl font-bold text-red-600 mb-4">
                <%= error.status || 500 %>
            </h1>
            <p class="text-xl text-gray-700 mb-4">
                <%= message || error.message || 'Something went wrong' %>
            </p>
            <p class="text-gray-500">
                <%= error.stack && process.env.NODE_ENV === 'development' ? error.stack : '' %>
            </p>
        </div>

        <div class="space-x-4">
            <a href="/"
                class="inline-block bg-blue-800 text-white px-6 py-2 rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                Go Home
            </a>
            <button onclick="history.back()"
                class="inline-block bg-gray-200 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-offset-2">
                Go Back
            </button>
        </div>

        <% if (error.status === 404) { %>
            <div class="mt-8">
                <h2 class="text-lg font-medium text-gray-700 mb-4">Quick Links</h2>
                <ul class="space-y-2">
                    <li><a href="/" class="text-blue-600 hover:underline">Home</a></li>
                    <li><a href="/auth/login" class="text-blue-600 hover:underline">Login</a></li>
                    <li><a href="/auth/register" class="text-blue-600 hover:underline">Register</a></li>
                    <li><a href="/fir/new" class="text-blue-600 hover:underline">File New FIR</a></li>
                    <li><a href="/contact" class="text-blue-600 hover:underline">Contact Support</a></li>
                </ul>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %> 